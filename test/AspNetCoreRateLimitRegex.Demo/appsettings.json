{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "IpRateLimiting": {
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "8.8.8.8", "192.168.0.0/24" ],
    "UrlWhitelist": [ "delete:/api/values", ".*:/api/items", ".*:/api/ClientRateLimit", ".*:/api/IpRateLimit" ],
    "ClientWhitelist": [ "bypass-key-1", "bypass-key-2" ],
    "GeneralRules": [
      {
        "UrlRegex": ".*:.*",
        "Period": "1s",
        "Limit": 2
      },
      {
        "UrlRegex": ".*:.*",
        "Period": "1m",
        "Limit": 4
      },
      {
        "UrlRegex": ".*:/api/values",
        "Period": "5m",
        "Limit": 3
      }
    ]
  },

  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "::1/10",
        "Rules": [
          {
            "UrlRegex": ".*:.*",
            "Period": "1s",
            "Limit": 10
          },
          {
            "UrlRegex": "get:/api/values",
            "Period": "1m",
            "Limit": 3
          },
          {
            "UrlRegex": "put:/api/values",
            "Period": "5m",
            "Limit": 2
          },
          {
            "UrlRegex": "delete:/api/values",
            "Period": "1h",
            "Limit": 2
          }
        ]
      },
      {
        "Ip": "84.247.85.224",
        "Rules": [
          {
            "UrlRegex": "get:/api/values",
            "Period": "1s",
            "Limit": 10
          },
          {
            "UrlRegex": ".*:.*",
            "Period": "1m",
            "Limit": 2
          }
        ]
      }
    ]
  },

  "ClientRateLimiting": {
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "UrlWhitelist": [ "delete:/api/items", ".*:/api/ClientRateLimit", ".*:/api/IpRateLimit" ],
    "ClientWhitelist": [ "cl-key-a", "cl-key-b" ],
    "GeneralRules": [
      {
        "UrlRegex": ".*:.*",
        "Period": "1s",
        "Limit": 2
      },
      {
        "UrlRegex": ".*:.*",
        "Period": "5m",
        "Limit": 10
      },
      {
        "UrlRegex": "get:/api/values/.*/Users/SyncByCommonNames",
        "Period": "5m",
        "Limit": 15
      }
    ]
  },

  "ClientRateLimitPolicies": {
    "ClientRules": [
      {
        "ClientId": "anon",
        "Rules": [
          {
            "UrlRegex": ".*:.*",
            "Period": "1s",
            "Limit": 10
          },
          {
            "UrlRegex": "get:/api/clients",
            "Period": "1m",
            "Limit": 2
          },
          {
            "UrlRegex": "put:/api/clients",
            "Period": "5m",
            "Limit": 2
          },
          {
            "UrlRegex": "delete:/api/clients",
            "Period": "1h",
            "Limit": 2
          }
        ]
      },
      {
        "ClientId": "cl-key-2",
        "Rules": [
          {
            "UrlRegex": "get:/api/clients",
            "Period": "1s",
            "Limit": 10
          },
          {
            "UrlRegex": ".*:.*",
            "Period": "1m",
            "Limit": 2
          }
        ]
      }
    ]
  },

  "UrlRateLimiting": {
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "UrlRegex": "get:/api/values/microsoft",
        "Period": "5m",
        "Limit": 10
      },
      {
        "UrlRegex": "get:/api/values/.*/Users/list",
        "ProtectUrlUnmatched": true,
        "Period": "5m",
        "Limit": 5
      }
    ]
  }
}
